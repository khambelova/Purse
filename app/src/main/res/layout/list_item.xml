<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view_income="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view_income:cardCornerRadius="4dp"
        card_view_income:cardElevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textSize="15sp"
                card_view_income:layout_constraintLeft_toLeftOf="parent"
                card_view_income:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sum_item"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                card_view_income:layout_constraintRight_toRightOf="parent"
                card_view_income:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/comment_item"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                card_view_income:layout_constraintTop_toBottomOf="@id/date_item"
                card_view_income:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/currency_item"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                card_view_income:layout_constraintTop_toBottomOf="@id/sum_item"
                card_view_income:layout_constraintRight_toRightOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>